<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/alertSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alerts On/Off"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/nextAlertText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next alert: --:--"
        app:layout_constraintTop_toBottomOf="@+id/alertSwitch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        />

    <Button
        android:id="@+id/btnSound15"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sound for :15"
        app:layout_constraintTop_toBottomOf="@+id/nextAlertText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSound30"
        app:layout_constraintHorizontalWeight="1"
        android:layout_marginTop="32dp"
        />

    <Button
        android:id="@+id/btnSound30"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sound for :30"
        app:layout_constraintTop_toBottomOf="@+id/nextAlertText"
        app:layout_constraintStart_toEndOf="@+id/btnSound15"
        app:layout_constraintEnd_toStartOf="@+id/btnSound45"
        app:layout_constraintHorizontalWeight="1"
        android:layout_marginTop="32dp"
        />

    <Button
        android:id="@+id/btnSound45"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sound for :45"
        app:layout_constraintTop_toBottomOf="@+id/nextAlertText"
        app:layout_constraintStart_toEndOf="@+id/btnSound30"
        app:layout_constraintEnd_toStartOf="@+id/btnSound00"
        app:layout_constraintHorizontalWeight="1"
        android:layout_marginTop="32dp"
        />

    <Button
        android:id="@+id/btnSound00"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sound for :00"
        app:layout_constraintTop_toBottomOf="@+id/nextAlertText"
        app:layout_constraintStart_toEndOf="@+id/btnSound45"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontalWeight="1"
        android:layout_marginTop="32dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
